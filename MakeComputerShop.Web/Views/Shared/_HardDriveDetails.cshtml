<div class="row">
    <img src="@Model.ImageUrl"
         alt="boohoo" class="image-details img-responsive"/>
</div>
<div class="col-lg-offset-2 col-lg-4 col-lg-offset-2 col-md-offset-1 col-md-6 col-md-offset-1">
    <div class="table-products">
        <table class="table table-bordered table-hover table-responsive table-striped table-condensed">
            <thead></thead>
            <tbody>
            <tr>
                <td>Nazwa:</td>
                <td>@Model.Name</td>
            </tr>
            <tr>
                <td> Pojemność:</td>
                <td>@Model.Capacity GB</td>
            </tr>
            <tr>
                <td>Producent: </td>
                <td>@Model.Producent.Name</td>
            </tr>
                <tr>
                    <td>Pamięć cache: </td>
                    <td>@Model.CacheMemory MB</td>
                </tr>
                <tr>
                    <td>Typ: </td>
                    <td>@Model.HardDriveType</td>
                </tr>
                <tr>
                    <td>Format dysku: </td>
                    <td>@Model.WidthFormat</td>
                </tr>
            <tr>
                <td>Cena: </td>
                <td>@Model.Price zł</td>
            </tr>
            </tbody>
        </table>
    </div>
</div>                                                        
