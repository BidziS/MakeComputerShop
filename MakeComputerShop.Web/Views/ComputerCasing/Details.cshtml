@model MakeComputerShop.Bll.Dtos.ComputerCasingDto
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div class="container">
    @if (Model == null )
    {
        <text>
            Nie ma żadnych producentów w bazie
        </text>
    }
    else
    {
        <div class="item-homepage">
            <div class="row">
                @Html.Partial("_ComputerCasingDetails", Model)
                <div class="row">
                    <div class="block-center">
                        @Html.ActionLink("powrót", "All", "ComputerCasing", null , new { @class = "btn btn-primary" })    
                        @Html.ActionLink("do koszyka", "AddToShopCart", "ComputerCasing", new { id = Model.Id }, new { @class = "btn" })
                    </div>
                </div>                                                        
            </div>
        </div>       
    }

</div>