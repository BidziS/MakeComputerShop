@model IEnumerable<MakeComputerShop.Bll.Dtos.HardDriveDto>
@{
    ViewBag.Title = "All";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>All</h2>
<div class="container">
    <hr />
    @if (!Model.Any())
    {
        <text>
            Nie ma żadnych twardych dysków w bazie
        </text>
    }
    else
    {
        foreach (var hard_drive in Model)
        {
            @Html.Partial("_HardDriveListRow", hard_drive)
        }
    }
</div>